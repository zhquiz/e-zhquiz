{
  "name": "zhquiz",
  "version": "0.1.0",
  "private": true,
  "main": "lib/index.js",
  "author": {
    "email": "polv@polv.cc",
    "name": "Pacharapol Withayasakpunt",
    "url": "https://www.polv.cc"
  },
  "description": "ZhQuiz - Hanzi, Vocab and Sentences quizzing on your local machine, fully offline",
  "homepage": "https://www.zhquiz.cc",
  "repository": "github:zhquiz/zhquiz",
  "license": "MIT",
  "files": [
    "public/",
    "lib/",
    "assets/"
  ],
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dev": "run-p dev:*",
    "dev:e": "nodemon src/server.ts",
    "dev:ui": "cd ../ui && SERVER_PORT=5000 yarn nuxt-ts",
    "watch": "run-p watch:*",
    "watch:e": "yarn build:e --watch",
    "watch:ui": "cd ../ui && IS_ELECTRON=1 yarn build --watch",
    "build": "run-s 'build:*'",
    "build:e": "tsc -P src/tsconfig.json",
    "build:ui": "cd ../ui && IS_ELECTRON=1 yarn build",
    "dist": "electron-builder -wml",
    "ts": "TS_NODE_COMPILER_OPTIONS='{\"noImplicitAny\":false}' electron -r ts-node/register"
  },
  "dependencies": {
    "array-shuffle": "^2.0.0",
    "axios": "^0.21.1",
    "better-sqlite3": "6",
    "cheerio": "^1.0.0-rc.5",
    "chinese-to-pinyin": "^1.3.1",
    "death": "^1.1.0",
    "electron-context-menu": "^2.4.0",
    "electron-tabs": "^0.15.0",
    "fastify": "^3.9.2",
    "fastify-static": "^3.3.1",
    "fs-extra": "^9.0.1",
    "get-port": "^5.1.1",
    "id128": "^1.6.3",
    "js-yaml": "^4.0.0",
    "jsonschema-definer": "^1.3.2",
    "native-duration": "^0.2.1",
    "node-gtts": "^2.0.2",
    "nodejieba": "^2.5.1",
    "pino": "^6.10.0",
    "pino-pretty": "^4.3.0",
    "strip-ansi-stream": "^1.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.1",
    "@types/cheerio": "^0.22.23",
    "@types/death": "^1.1.1",
    "@types/fs-extra": "^9.0.6",
    "@types/js-yaml": "^4.0.0",
    "@types/pino": "^6.3.5",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "import-sort-parser-typescript": "^6.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.1"
  },
  "importSort": {
    ".js, .ts": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/*.d.ts"
    ],
    "delay": "1000",
    "execMap": {
      "ts": "electron -r ts-node/register --debug"
    },
    "env": {
      "TS_NODE_COMPILER_OPTIONS": "{\"noImplicitAny\":false}"
    }
  }
}
